<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context="se.paap.userlistapplication.EditUserActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_username_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginBottom="48dp"
        android:layout_alignBottom="@+id/edit_text_username"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edit_text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_username_label"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/tv_age"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_age_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/edit_text_age"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edit_text_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/edit_age_label"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/btn_edit_user"
        android:text="@string/btn_edit_user"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@+id/edit_text_age"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />


</RelativeLayout>
